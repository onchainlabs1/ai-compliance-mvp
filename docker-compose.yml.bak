version: "3.9"

services:

  github-mcp:
    image: ghcr.io/a16z-infra/github-mcp-server:0.2.5
    platform: linux/amd64
    command: ["--http", "--port", "8080"]
    environment:
      GITHUB_TOKEN: ${GITHUB_TOKEN}
    ports: ["9000:8080"]

  sentry:
    image: ghcr.io/a16z-infra/sentry-mcp-server:0.2.5
    platform: linux/amd64
    command: ["--http", "--port", "8080", "--auth-token", "${SENTRY_AUTH_TOKEN}"]
    ports: ["9020:8080"]

  app:
    build: .
    env_file: .env
    ports: ["8501:8501"]
    depends_on: [github-mcp, sentry, postgres]

  chroma:
    image: chromadb/chroma:0.4.24
    ports: ["8000:8000"]

  postgres:
    image: postgres:16-alpine
    environment:
      POSTGRES_PASSWORD: pgpasswd
    ports: ["5432:5432"]